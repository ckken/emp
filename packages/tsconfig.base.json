{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  }
}
